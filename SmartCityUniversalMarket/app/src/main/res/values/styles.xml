<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="mainActivityButtonStyle">
        <item name="android:background">@color/backViewColor</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/holo_green_dark</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_gravity">center_horizontal|left</item>
    </style>

    <style name="programNameTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">39dp</item>
        <item name="android:textSize">29sp</item>
        <item name="android:textColor">@color/textColorGreenOrOrangeAllActivities</item>
        <item name="android:text">@string/program_name</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="textViewLoginActivityStandart">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/textViewLoginPasswordApplyColorLoginActivity</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="editTextLoginActivityStandart">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/editTextStringInsideColorAllActivities</item>
    </style>

    <style name="buttonLoginActivityStandart">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">37dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@color/textColorGreenOrOrangeAllActivities</item>
    </style>

    <style name="imageViewAppIconAllActivities">
        <item name="android:layout_height">210dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:src">@drawable/tyt</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="editTextLoginAndRegistrationActivities">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/editTextStringInsideColorAllActivities</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="textViewLoginAndRegistrationActivities">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">7dp</item>
        <item name="android:textColor">@color/textColorGreenOrOrangeAllActivities</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="firstLaunchTextViewGeneral">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/frontViewColor</item>

    </style>
</resources>
