<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_registration"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backViewColor"
    tools:context="com.l.smartcityuniversalmarket.RegistrationActivity">

    <TextView
        android:id="@+id/name_of_program_registration"
        style="@style/programNameTextView" />

    <ImageView
        android:id="@+id/imageview_registration"
        style="@style/imageViewAppIconAllActivities"
        android:layout_below="@+id/name_of_program_registration"
        android:contentDescription="@string/image_main" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageview_registration"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:paddingEnd="20dp"
        android:paddingStart="20dp">

        <TextView
            android:id="@+id/name_text_view_registration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textAllCaps="false"
            android:textColor="@color/textColorGreenOrOrangeAllActivities"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/name_edit_text_registration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:text="Your mail address"
            android:textAllCaps="false"
            android:textColor="@color/editTextStringInsideColorAllActivities"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/login_text_view_registration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:text="Mobile number"
            android:textAllCaps="false"
            android:textColor="@color/textColorGreenOrOrangeAllActivities"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/id_edit_text_registration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:text="Number"
            android:textAllCaps="false"
            android:textColor="@color/editTextStringInsideColorAllActivities"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/password_text_view_registration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:text="Password"
            android:textAllCaps="false"
            android:textColor="@color/textColorGreenOrOrangeAllActivities"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/password_edit_text_registration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberPassword"
            android:text="Password"
            android:textAllCaps="false"
            android:textColor="@color/editTextStringInsideColorAllActivities"
            android:textSize="17dp" />

        <Button
            android:id="@+id/ra_ready_register_button"
            style="@style/buttonLoginActivityStandart"
            android:layout_marginTop="5dp"
            android:text="Create account" />

        <Button
            android:id="@+id/ra_login_button"
            style="@style/buttonLoginActivityStandart"
            android:background="@color/backgroundColorWhiteOrOrangeAllActivities"
            android:nextFocusDown="@id/la_apply_button"
            android:text="Already a member? Login"
            android:textAllCaps="false"
            android:textColor="@color/frontViewColor"
            android:textSize="19sp" />


    </LinearLayout>


</RelativeLayout>
