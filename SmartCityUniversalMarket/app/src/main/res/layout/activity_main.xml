<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFFFF"
    tools:context="com.l.smartcityuniversalmarket.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/name_of_program_main"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal|center_vertical"
                android:text="@string/program_name"
                android:textColor="@android:color/holo_green_dark"
                android:textSize="30sp"
                android:textStyle="normal" />

            <ImageView
                android:id="@+id/imageview_main"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_below="@+id/name_of_program_main"
                android:contentDescription="@string/image_main"
                android:src="@drawable/regnum_picture_1470041961499558_normal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageview_main"
                android:orientation="vertical">


                <Button
                    android:id="@+id/am_button1"
                    style="@style/mainActivityButtonStyle"
                    android:text="@string/am_button1_string"
                    android:drawableStart="@drawable/pokupki"/>

                <Button
                    android:id="@+id/am_button2"
                    style="@style/mainActivityButtonStyle"
                    android:text="@string/am_button2_string"
                    android:drawableStart="@drawable/korzina"/>

                <Button
                    android:id="@+id/am_button3"
                    style="@style/mainActivityButtonStyle"
                    android:text="@string/am_button3_string"
                    android:drawableStart="@drawable/last_ordered"/>

                <Button
                    android:id="@+id/am_button4"
                    style="@style/mainActivityButtonStyle"
                    android:text="@string/am_button4_string"
                    android:drawableStart="@drawable/settings"/>

                <Button
                    style="@style/mainActivityButtonStyle"
                    android:id="@+id/am_button5"
                    android:text="@string/am_button5_string"
                    android:drawable="@drawable/change_user"/>

                <Button
                    android:id="@+id/am_button6"
                    style="@style/mainActivityButtonStyle"
                    android:text="@string/am_button6_string"
                    android:drawableStart="@drawable/quit"/>
            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

</FrameLayout>
